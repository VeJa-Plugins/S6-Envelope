@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .

<http://VeJaPlugins.com/plugins/Release/m8env> 
a lv2:Plugin, mod:ControlVoltagePlugin;
lv2:requiredFeature urid:map ;

doap:name "M8 ENVELOPE";

doap:developer [
    foaf:name "Jarno & Jan";
    foaf:homepage <>;
    foaf:mbox <mailto:jan@moddevices.com>;
    ];

doap:maintainer [
    foaf:name "Veja Plugins";
    foaf:homepage <>;
    foaf:mbox <mailto:jan@moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 1;

rdfs:comment """
CV module that contains the Envelope used inside the Mars-8 project

This envelope also exposes control over the liniarity of both the Attack, Decay and release curve.

The envelope can be modulated by inserting a CV pitch signal to the input and turning on key follow
""";

lv2:port
[
    a lv2:InputPort, lv2:CVPort, mod:CVPort;
    lv2:index 0;
    lv2:symbol "CvTriggerInput";
    lv2:name "Cv Trigger Input";
]
,
[
    a lv2:InputPort, lv2:CVPort, mod:CVPort;
    lv2:index 1;
    lv2:symbol "CvPitchInput";
    lv2:name "CV Pitch Input";
]
,
[
    a lv2:OutputPort, lv2:CVPort, mod:CVPort;
    lv2:index 2;
    lv2:symbol "CvOutput";
    lv2:name "Cv Output";
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 3;
    lv2:symbol "ENV_A";
    lv2:name "Attack";
    lv2:default 0.2;
    lv2:minimum 0.01;
    lv2:maximum 10;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 4;
    lv2:symbol "ENV_D";
    lv2:name "Decay";
    lv2:default 0.3;
    lv2:minimum 0.01;
    lv2:maximum 10;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 5;
    lv2:symbol "ENV_S";
    lv2:name "Sustain";
    lv2:default 0.5;
    lv2:minimum 0.01;
    lv2:maximum 1;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 6;
    lv2:symbol "ENV_R";
    lv2:name "Release";
    lv2:default 0.5;
    lv2:minimum 0.01;
    lv2:maximum 10;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 7;
    lv2:symbol "ENV_INVERT";
    lv2:name "Invert";
    lv2:portProperty lv2:toggled , lv2:integer ;
    lv2:default 0 ;
    lv2:minimum 0 ;
    lv2:maximum 1 ;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 8;
    lv2:symbol "ENV_KEY_FOLLOW";
    lv2:name "Key Follow";
    lv2:portProperty lv2:toggled , lv2:integer ;
    lv2:default 0 ;
    lv2:minimum 0 ;
    lv2:maximum 1 ;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 9;
    lv2:symbol "ENV_A_RATIO";
    lv2:name "Attack Curve";
    lv2:default 0.3;
    lv2:minimum 0.01;
    lv2:maximum 1;
]
,
[
    a lv2:InputPort, lv2:ControlPort;
    lv2:index 10;
    lv2:symbol "ENV_DR_RATIO";
    lv2:name "D/R Curve";
    lv2:default 0.3;
    lv2:minimum 0.01;
    lv2:maximum 1;
]
.
